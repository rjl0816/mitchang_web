<div class="row justify-content-center">
    <div class="col-12">
        <%= form_with(model: @event, class:"shadow-lg p-1 bg-light rounded", local: true) do |f| %>
            <%= render 'layouts/errors', obj: @event %>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-2">
                    <%= f.label :Event_Date, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.date_select :event_date, class: "form-control", placeholder: "Event Date" %>
                    </div>
                </div>
                <div class="form-group col-md-10">
                    <%= f.label :Event_Description, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :event_description, class: "form-control", placeholder: "Event Description" %>
                    </div>
                </div>
            </div>
            <div class="form-row mt-5">
                <%= link_to :back do %>
                    <button type="button" class="btn btn-outline-danger ml-2 mr-1">Back</button>
                <% end %>   
                <% if @event.new_record? %>
                    <%= f.submit 'Add New Event', class: "btn btn-outline-primary" %>
                <% else %>
                    <%= f.submit 'Update This Event', class: "btn btn-outlineprimary" %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>