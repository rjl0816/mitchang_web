<div class="row justify-content-center">
    <div class="col-12">
        <%= form_with(model: @item, class:"shadow-lg p-1 bg-light rounded", local: true) do |f| %>
            <%= render 'layouts/errors', obj: @item %>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-6">
                    <%= f.label :Item_Name, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :item_name, class: "form-control", placeholder: "Item Name" %>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :Description, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-6">
                    <%= f.label :Price, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :price, class: "form-control", placeholder: "Price in Dollars (Numbers ONLY)" %>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :Weight, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :gram, class: "form-control", placeholder: "Weight in Grams (Numbers ONLY)" %>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-6">
                    <%= f.label :Rank, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :rank, class: "form-control", placeholder: "Rank" %>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :Remarks, class: "col-12 col-form-label text-dark" %>
                    <div>
                        <%= f.text_field :remarks, class: "form-control", placeholder: "Remarks" %>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-6">
                    <%= f.label :Brand, class: "col-12 col-form-label text-dark" %>
                    <div class="ml-3">
                        <%= f.collection_select :brand_id, Brand.all, :id, :brand_name, {}, {class: "form form-group form-control"} %>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :Category, class: "col-12 col-form-label text-dark" %>
                    <div class="ml-3">
                        <%= f.collection_select :category_id, Category.all, :id, :category_name, {}, {class: "form form-group form-control"} %>
                    </div>
                </div>
            </div>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-6">
                    <%= f.label :Images, class: "col-12 col-form-label text-dark" %>
                    <div class="ml-3">
                        <%= f.file_field :images, multiple: true %>
                    </div>
                </div>
            </div>
            <div class="form-row mt-5">
                <%= link_to :back do %>
                    <button type="button" class="btn btn-outline-danger ml-2 mr-1">Back</button>
                <% end %>   
                <% if @item.new_record? %>
                    <%= f.submit 'Add New Item', class: "btn btn-outline-primary" %>
                <% else %>
                    <%= f.submit 'Update This Item', class: "btn btn-outlineprimary" %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>