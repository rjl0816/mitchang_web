<div class="pt-1 m-5">
  <div class="background-white">
    <div class="d-flex p-5">
        <div class="item-left-side">
            <div id="carouselExampleIndicators" class="carousel slide me-5" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></button>
                    <% @item.images.drop(1).count.times do |index| %>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="#{index}"></button>
                    <% end %>
                </div>
                <div class="carousel-inner", style="height: 600px;">
                    <div class="carousel-item active">
                        <img src="<%= rails_blob_path(@item.images.first) %>", id="carousel-images">
                    </div>
                    <% @item.images.drop(1).each do |image| %>
                        <div class="carousel-item">
                            <img src="<%= rails_blob_path(image) %>", id="carousel-images">
                        </div>
                    <% end %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="item-right-side">    
            <div id="item-box">
                <div id="item-box-text">
                    <div id="item-box-text1"><%= @item.item_name %></div>
                    <div class="d-flex">
                        <div id="item-box-text2">$<%= @item.price %> (USD)</div>
                        <% if @item.rank.present? %>
                            <div class="ps-4", id="item-box-text2">Rank: <%= @item.rank %></div>
                        <% end %>
                        <% if @item.gram.present? %>
                            <div class="ps-4", id="item-box-text2"><%= @item.gram %> (g)</div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="text-block">
                <div id="item-about-text1">PRODUCT DESCRIPTION</div>
                <p id="item-about-text2"><%= @item.description %></p>
                <div id="item-about-text1">REMARKS</div>
                <p id="item-about-text2"><%= @item.remarks %></p>
                <div id="item-about-text1">RETURN & REFUND POLICY</div>
                <p id="item-about-text2">PLEASE be aware that we DO NOT accept returns and exchanges unless the buyer has VALID reasons. Refer to our <%= link_to "How To Buy", buy_path, class: "text-link" %> Page for more details. For questions and concerns, please message us through our Social Media.</p>
            </div>
        </div>
    </div>
  </div>
</div>

<%= render 'mains/sidebar'%>
